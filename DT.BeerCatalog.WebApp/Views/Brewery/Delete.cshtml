@model BreweryViewModel

<div class="row">
    <div class="col-md-12">
        <h1>@Model.PageTitle</h1>
        <h3>@Model.ErrorMessage</h3>
    </div>
</div>

<div class="row">
    <div class="col-md-4">Street</div>
    <div class="col-md-8">@Model.CurrentBrewery.Name</div>
</div>
<div class="row">
    <div class="col-md-4">Number</div>
    <div class="col-md-8">@Model.CurrentBrewery.About</div>
</div>
<div class="row">
    <div class="col-md-4">PostalCode</div>
    <div class="col-md-8">@Model.CurrentBrewery.Address</div>
</div>
<div class="row">
    <div class="col-md-4">City</div>
    <div class="col-md-8">@Model.CurrentBrewery.Beers</div>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Delete" method="post">
            <input asp-for="CurrentBrewery.Id" type="hidden" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <a asp-action="Index">Back to List</a>
    </div>
</div>
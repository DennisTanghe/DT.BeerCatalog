@model BreweryViewModel

<div class="row">
    <div class="col-md-12">
        <h1>@Model.PageTitle</h1>
        <h3>@Model.ErrorMessage</h3>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" method="post" role="form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CurrentBrewery.Name" class="col-md-2 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="CurrentBrewery.Name" class="form-control" />
                    <span asp-validation-for="CurrentBrewery.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CurrentBrewery.About" class="col-md-2 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="CurrentBrewery.About" class="form-control" />
                    <span asp-validation-for="CurrentBrewery.About" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CurrentBrewery.Address" class="col-md-2 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="CurrentBrewery.Address.Id" type="hidden" />
                    <input asp-for="CurrentBrewery.Address.Street" type="hidden" />
                    <input asp-for="CurrentBrewery.Address.Number" type="hidden" />
                    <input asp-for="CurrentBrewery.Address.PostalCode" type="hidden" />
                    <input asp-for="CurrentBrewery.Address.City" type="hidden" />
                    <input asp-for="CurrentBrewery.Address.Country" type="hidden" />

                    <select asp-for="SelectedAddressId" asp-items="Model.AddressList"></select>
                    <span asp-validation-for="SelectedAddressId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input asp-for="CurrentBrewery.Beers" type="hidden" />
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <a asp-action="Index">Back to List</a>
    </div>
</div>
@model AddressViewModel

@{
    ViewData["Title"] = "Create New Address";
}

<h1>@Model.PageTitle</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CurrentAddress.Street" class="control-label"></label>
                <input asp-for="CurrentAddress.Street" class="form-control" />
                <span asp-validation-for="CurrentAddress.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentAddress.Number" class="control-label"></label>
                <input asp-for="CurrentAddress.Number" class="form-control" />
                <span asp-validation-for="CurrentAddress.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentAddress.PostalCode" class="control-label"></label>
                <input asp-for="CurrentAddress.PostalCode" class="form-control" />
                <span asp-validation-for="CurrentAddress.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentAddress.City" class="control-label"></label>
                <input asp-for="CurrentAddress.City" class="form-control" />
                <span asp-validation-for="CurrentAddress.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentAddress.Country" class="control-label"></label>
                <input asp-for="CurrentAddress.Country" class="form-control" />
                <span asp-validation-for="CurrentAddress.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}